@{
    ViewBag.Title = "Closest Address";
}
<div class="container" id="closest-address-results" data-dataURL="http://closestaddressapi/api/ClosestAddressWebapi">
    <div class="row">
        <div class="col-lg-12">
            <h2>Find Closest Address</h2>
            <div class="alert alert-danger" v-if="isDisplayMessage">
                <strong>Please enter address</strong>
            </div>
            <div class="form-group">
                <label for="address">Address:</label>
                <input name="address" type="text" class="form-control" value="" id="txtAddress" v-model="searchAddress" />
            </div>
            <input type="button" value="Submit" id="btnSearch" class="btn btn-primary" v-on:click="searchClick" />
        </div>
    </div>
    <div class="table-responsive" v-if="results.length>0">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>KM</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="address in results">
                    <td>{{address.Name}}</td>
                    <td>{{address.KM}}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="overlay" v-if="isDisplayLoader">
        <a href="javascript:void(0)" class="closebtn"></a>
        <div class="overlay-content">
            Loading...
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/closestaddress")
